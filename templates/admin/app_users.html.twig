{% extends "admin/layout.html.twig" %}

{% block content %}
<h1>Application : {{ appName }} </h1>
<h3>Users Assigned List</h3>

<form action="#" method="post" name="frmAppUser" id="frmAppUser">
    <input type="hidden" name="delAssignUser" id="delAssignUser" value="" />
    <table class="table">
        <tr>
            <th>Users</th>
            <th>Action</th>
        </tr>
        {% for aAppUser in aAppUsers %}
        <tr>
            <td>{{ aAppUser }}</td>
            <td><a href="#" class="jsAppUserRemove" data-username="{{ aAppUser }}"> <span class="fa fa-remove"></span></a></td>
        </tr>
        {% endfor %}
    </table>
</form>

<!-- Button trigger modal -->
<div class="buttonbox">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal"  data-target="#popUpAppAssignUser" data-keyboard="true" 
        data-backdrop="static">Assign Users</button>
</div>
<!-- Modal -->
<div class="modal fade" id="popUpAppAssignUser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Seach users for assign</h4>
            </div>
            <div class="modal-body">
                <div id="msgAppId" style="display: none;" class="alert alert-success" role="alert"></div>
                <div>
                    <form>
                        <div class="form-group">
                            <label for="recipient-name" class="control-label">Users:</label>
                            <input type="text" class="form-control" id="searchAppUser" name="searchAppUse">
                        </div>
                    </form>
                </div>
                <div id="userAssignContent"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    window.appUser = {url: "{{ path('admin_app_searchuser', {'appname': appName }) }}" };
</script>
{% endblock %}