<head>
    <title>UserBase Admin</title>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    <style>
        .buttonbox, .right {
            text-align: right;
        }
        
        body {
            background-color: #e0e0e0;
        }
        
        #screen {
            margin-top: 50px;
            background-color: #202020;
            border: #404040 1px solid;
            border-radius: 10px;
            padding: 10px;
            text-align: center;
            box-shadow: 0px 3px 20px 0px rgba(0,0,0,0.75);
        }
        
        #content {
            margin-top: 20px;
            padding: 20px;
            border: #c0c0c0 1px solid;
            background-color: #ffffff;
            border-radius: 5px;
            text-align: left;
        }
        
        #content h1 {
            color: #808080;
            line-height: 1;
            margin: 0px;
            margin-bottom: 20px;
        }
        #header {
        }
        
        #header .logo {
            margin-top: 20px;
            height: 100px;
            width: 100px;
        }
        #header h1 {
            color: #ffffff;
        }
        #header p.description {
            color: #808080;
            font-style: italic;
        }
        
        
        .poweredby {
            margin-top: 10px;
            color: #808080;
        }
        
        button.btn, a.btn {
            xwidth: 100%;
        }
    </style>
</head>

<body>
    
    <div class="container">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-10">
                <div id="screen">
                    <div id="header">
                        {#<img class="logo" src="{{ logourl }}" />#}
                        <h1>UserBase Admin</h1>
                        {#<p class="description">It's super awesome</p>#}
                    </div>
                    <div id="content">
                        <div id="nav">
                            <ul class="nav nav-pills nav-inverse">
                                <li><a href="{{ path("admin_index") }}">Home</a></li>
                                <li><a href="{{ path("admin_user_list") }}">Users</a></li>
                                <li><a href="{{ path("admin_account_list") }}">Account</a></li>
                                <li><a href="{{ path("admin_apps_list") }}">Apps</a></li>
                                <li><a href="{{ path("admin_account_apikeys") }}">Apikeys</a></li>
                                <li><a href="{{ path("admin_log_list") }}">Log</a></li>
                                <li><a href="{{ path("logout") }}">Logout</a></li>
                            </ul>
                        </div>
                        <hr />
                        {% block content %}{% endblock %}
                    </div>
                    <p class="poweredby">&copy; 2015 Powered by UserBase</p>
                </div>
            </div>
            <div class="col-md-1">
            </div>
    </div>
    <!-- JS Global Compulsory -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="{{ path("js") }}/general.js"></script>
     
</body>
</html>
