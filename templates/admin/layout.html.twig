<!DOCTYPE html>
<!--[if IE 7]> <html lang="en" class="ie7"> <![endif]-->
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<!--[if !IE]><!--> <html lang="en"> <!--<![endif]-->
<head>
    <title>UserBase Admin</title>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" href="{{ path("bower") }}/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ path("bower") }}/font-awesome/css/font-awesome.min.css">

    {% block stylesheets_custom %}{% endblock %}

    <style>
        .buttonbox, .right {
            text-align: right;
            margin-bottom: 5px;
        }

        body {
            background-color: #e0e0e0;
        }

        #screen {
            margin-top: 50px;
            background-color: #202020;
            border: #404040 1px solid;
            border-radius: 10px;
            padding: 10px;
            text-align: center;
            box-shadow: 0px 3px 20px 0px rgba(0,0,0,0.75);
        }

        #content {
            margin-top: 20px;
            padding: 20px;
            border: #c0c0c0 1px solid;
            background-color: #ffffff;
            border-radius: 5px;
            text-align: left;
        }

        #content h1 {
            color: #808080;
            line-height: 1;
            margin: 0px;
            margin-bottom: 20px;
        }
        #header {
        }

        #header .logo {
            margin-top: 20px;
            height: 100px;
            width: 100px;
        }
        #header h1 {
            color: #ffffff;
        }
        #header p.description {
            color: #808080;
            font-style: italic;
        }


        .poweredby {
            margin-top: 10px;
            color: #808080;
        }

        button.btn, a.btn {
            xwidth: 100%;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-10">
                <div id="screen">
                    <div id="header">
                        {#<img class="logo" src="{{ logourl }}" />#}
                        <h1>UserBase Admin</h1>
                        {#<p class="description">It's super awesome</p>#}
                    </div>
                    <div id="content">
                        <div id="nav">
                            <ul class="nav nav-pills nav-inverse">
                                <li><a href="{{ path("admin_index") }}">Home</a></li>
                                {#<li><a href="{{ path("admin_user_list") }}">Users</a></li>#}
                                <li><a href="{{ path("admin_account_list") }}">Accounts</a></li>
                                <li><a href="{{ path("admin_apps_list") }}">Apps</a></li>
                                {#<li><a href="{{ path("admin_account_apikeys") }}">Apikeys</a></li>#}
                                <li><a href="{{ path("admin_blacklist_index") }}">Blacklist</a></li>
                                <li><a href="{{ path("admin_tag_index") }}">Tags</a></li>
                                <li><a href="{{ path("admin_property_index") }}">Properties</a></li>
                                <li><a href="{{ path("admin_event_index") }}">Events</a></li>
                                <li><a href="{{ path("mobile_alias_index") }}">Virtual mobiles</a></li>
                                <li><a href="{{ path("admin_invite_index") }}">Invites</a></li>
                                <li><a href="{{ path("logout") }}">Logout</a></li>
                            </ul>
                        </div>
                        <hr />
                        {% block content %}{% endblock %}
                    </div>
                    <p class="poweredby">&copy; 2015 Powered by UserBase</p>
                </div>
            </div>
            <div class="col-md-1">
            </div>
    </div>
    <!-- JS Global Compulsory -->
    <script type="text/javascript" src="{{ path("bower") }}/jquery/dist/jquery.min.js"></script>
    <script src="{{ path("bower") }}/bootstrap/dist/js/bootstrap.min.js"></script>    
    <script type="text/javascript" src="{{ path("js") }}/admin.js"></script>

    {% block scripts_custom %}{% endblock %}
</body>
</html>
