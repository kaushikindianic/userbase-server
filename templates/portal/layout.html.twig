<!DOCTYPE html>
<!--[if IE 7]> <html lang="en" class="ie7"> <![endif]-->
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<!--[if !IE]><!--> <html lang="en"> <!--<![endif]-->
<head>
    <title>Portal</title>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ path("js") }}/crop-lib/crop.css" type="text/css" />
    <style>
        .buttonbox, .right {
            text-align: right;
        }

        body {
            background-color: #e0e0e0;
        }

        #screen {
            margin-top: 50px;
            background-color: #202020;
            border: #404040 1px solid;
            border-radius: 10px;
            padding: 10px;
            xtext-align: center;
            xbox-shadow: 0px 3px 20px 0px rgba(0,0,0,0.75);
        }

        #content {
            margin-top: 20px;
            padding: 20px;
            border: #c0c0c0 1px solid;
            background-color: #ffffff;
            border-radius: 5px;
        }

        #content h1 {
            color: #808080;
            line-height: 1;
            margin: 0px;
            margin-bottom: 20px;
        }
        #header {
        }

        #header .logo {
            margin-top: 20px;
            width: 100px;
        }
        #header h1 {
            color: #ffffff;
        }
        #header p.description {
            color: #808080;
            font-style: italic;
        }

        .poweredby {
            margin-top: 10px;
            color: #808080;
        }

        #croppie {
            margin-bottom: 20px;
        }

        .croppie-container {
            padding: 0px 0;
        }
        .croppie-container .cr-boundary {
            margin-left: -5px;

        }

        .croppie-container .cr-slider-wrap {
            width: 100%;
            margin: 0 auto;
            margin-left: -5px;
            vertical-align: middle;
            padding: 20px 10px;
            background: #333;
        }


        .rotate {
            display: none;
            background: #333;
            color: #ddd;
            width: 100%;
            margin-top: 20px;
            margin-bottom: 0;
        }

        .rotate>li {
            padding: 0;
            width: 49%;
            padding: 10px 0;
            cursor: pointer;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-10">
                <div id="screen">
                    <div id="header">
                        <h1>UserBase</h1>
                        <p class="description">It's super awesome</p>
                    </div>
                    <div id="content">
                        {% if account is defined %}
                        <a href="{{ path("portal_account_picture", { 'accountname': account.getName() } )}}">
                            <img src="{{ path('picture', { 'accountname': account.getName() } ) }}" width="40px" style="float: right;" />
                        </a>
                        <h1>{{ account.getName() }}</h1>
                        
                        <div class="buttonbox">
                            <a href="{{ path('portal_index') }}" class="btn btn-default" role="button">
                                <i class="fa fa-arrow-left"></i>
                                Back
                            </a>
                            <a href="{{ path('portal_view', { 'accountname': account.getName() } ) }}" class="btn btn-default" role="button">
                                <i class="fa fa-info"></i> View
                            </a>
                            <a href="{{ path('portal_edit', { 'accountname': account.getName() } ) }}" class="btn btn-default" role="button">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a href="{{ path('portal_account_picture', { 'accountname': account.getName() } ) }}" class="btn btn-default" role="button">
                                <i class="fa fa-upload"></i> Picture
                            </a>
                            {% if account.getAccountType()=='organization' %}
                            <a href="{{ path('portal_account_members', { 'accountname': account.getName() } ) }}" class="btn btn-default" role="button">
                                <i class="fa fa-users"></i> Members
                            </a>
                            {% endif %}
                        </div>
                        
                        {% endif %}
                        {% block content %}{% endblock %}
                    </div>
                    <p class="poweredby">&copy; 2015 Powered by UserBase</p>
                </div>
            </div>
            <div class="col-md-1">
            </div>
    </div>
    <!-- JS Global Compulsory -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="{{ path("js") }}/crop-lib/crop.js" ></script>
    <script type="text/javascript" src="{{ path("js") }}/crop.js" ></script>
</body>
</html>
