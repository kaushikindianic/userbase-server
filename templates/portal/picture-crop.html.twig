{% extends "portal/layout.html.twig" %}


{% block content %}

<h2>{{ oAccount.getDisplayName() }} </h2>

<div class="row" > 
    <div class="col-md-10 text-left" style="margin-bottom:10px;" >
       
       <img src="{{ tmpImgPath }}" id="cropbox" />
       
        <form action="#" method="post" id="frmPicture" name="frmPicture"  enctype="multipart/form-data" >
           
           <input type="hidden" id="x" name="x" />
            <input type="hidden" id="y" name="y" />
            <input type="hidden" id="w" name="w" />
            <input type="hidden" id="h" name="h" />
            
            <div class="buttonbox" style="margin-top:10px;">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-server"></i>
                    crop
                </button>
                <a href="{{ path('portal_index') }}" class="btn btn-default" role="button">
                    <i class="fa fa-arrow-left"></i>
                    Back
                </a>
            </div>
        </form>         
    </div>
    <div class="col-md-2">   
           <div id="preview-pane">
            <div class="preview-container">
              <img src="{{ tmpImgPath }}" class="jcrop-preview" alt="Preview" />
            </div>
          </div>
    </div>   
</div>


<style>
/* Apply these styles only when #preview-pane has
   been placed within the Jcrop widget */
.jcrop-holder #preview-pane {
  display: block;
  position: absolute;
  z-index: 2000;
  top: 10px;
  right: -280px;
  padding: 6px;
  border: 1px rgba(0,0,0,.4) solid;
  background-color: white;

  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 6px;

  -webkit-box-shadow: 1px 1px 5px 2px rgba(0, 0, 0, 0.2);
  -moz-box-shadow: 1px 1px 5px 2px rgba(0, 0, 0, 0.2);
  box-shadow: 1px 1px 5px 2px rgba(0, 0, 0, 0.2);
}

/* The Javascript code will set the aspect ratio of the crop
   area based on the size of the thumbnail preview,
   specified here */
#preview-pane .preview-container {
  width: 100px;
  height: 100px;
  overflow: hidden;
}

</style>

{% endblock %}