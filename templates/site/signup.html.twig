{% extends "@Theme/layout.html.twig" %}

{% block content %}
<h1>{{ "signup.header"|trans }}</h1>
<form action="{{ path("signup_submit") }}" method="post">
    <div class="form-group form-group form-group">
        
        {% if postfix is defined %}
            <div class="input-group">
                <input name="_username" id="_username" value="{{_username|default("")}}"  autofocus class="form-control" placeholder="{{ "common.label_username"|trans }}" required="required" />
                <div class="input-group-addon">{{ postfix|star|raw }}</div>
            </div>
        {% else %}
            <input name="_username" id="_username"  value="{{_username|default("")}}" autofocus class="form-control" placeholder="{{ "common.label_username"|trans }}" required="required" />
        {% endif %}
         <div id="chkUserExist" style="dispaly:none;"></div> 
    </div>

    <div class="form-group form-group">
         <input name="_email" value="{{ _email|default("") }}" class="form-control" placeholder="{{ "common.label_email"|trans }}" type="email" required="required" />
    </div>
    
    {% if enable_mobile %}
    <div class="form-group form-group">
         <input name="_mobile" value="{{ _mobile|default("") }}" class="form-control" placeholder="{{ "common.label_mobile"|trans }}" type="text" required="required" />
    </div>
    {% endif %}

    <div class="form-group form-group">
         <input name="_password" class="form-control" placeholder="{{ "common.label_password"|trans }}" type="password" required="required" />
    </div>
    
    <div class="form-group form-group">
         <input name="_password2" class="form-control" placeholder="{{ "common.label_passwordrepeat"|trans }}" type="password" required="required" />
    </div>

    <button type="submit" id = "btnSubmit" class="btn btn-success btn-lg">{{ "common.action_signup"|trans }}</button><br />
    <br />
    {{ "common.label_alreadyhaveanaccount"|trans }} <a href="{{ path("login") }}"" class="">{{ "common.action_loginhere"|trans }}</a>
</form>

<script type="text/javascript">
    window.checkUser = {url: "{{ path('admin_user_check') }}" };
</script>
{% endblock %}
